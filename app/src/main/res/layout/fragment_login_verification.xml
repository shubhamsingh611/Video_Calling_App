<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/verificationFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/themeBackground"
        tools:context=".fragment.LoginVerificationFragment">

        <ImageView
            android:id="@+id/im_otp"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:src="@drawable/otp_logo"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_otp_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP Verification"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/im_otp" />

        <TextView
            android:id="@+id/tv_enter_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter the OTP sent to you"
            android:textColor="@color/black"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_otp_verification" />


        <EditText
            android:id="@+id/editTextNumber1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="1"
            tools:ignore="labelFor"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/black"
            android:background="@drawable/et_number_style"
            app:layout_constraintBottom_toBottomOf="@+id/editTextNumber2"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editTextNumber2" />

        <EditText
            android:id="@+id/editTextNumber2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_margin="5dp"
            android:inputType="number"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:background="@drawable/et_number_style"
            android:maxLength="1"
            tools:ignore="labelFor"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/editTextNumber3"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextNumber1"
            app:layout_constraintTop_toTopOf="@+id/editTextNumber3" />

        <EditText
            android:id="@+id/editTextNumber3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_margin="5dp"
            android:inputType="number"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:background="@drawable/et_number_style"
            android:maxLength="1"
            tools:ignore="labelFor"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/editTextNumber4"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextNumber2"
            app:layout_constraintTop_toTopOf="@+id/editTextNumber4" />

        <EditText
            android:id="@+id/editTextNumber4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_margin="5dp"
            android:inputType="number"
            android:gravity="center"
            android:textColor="@color/black"
            android:imeOptions="actionNext"
            android:background="@drawable/et_number_style"
            android:importantForAutofill="no"
            android:maxLength="1"
            tools:ignore="labelFor"
            app:layout_constraintBottom_toBottomOf="@+id/editTextNumber5"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextNumber3"
            app:layout_constraintTop_toTopOf="@+id/editTextNumber5" />

        <EditText
            android:id="@+id/editTextNumber5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_margin="5dp"
            android:inputType="number"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:textColor="@color/black"
            android:importantForAutofill="no"
            android:background="@drawable/et_number_style"
            android:maxLength="1"
            tools:ignore="labelFor"
            app:layout_constraintBottom_toBottomOf="@+id/editTextNumber6"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextNumber4"
            app:layout_constraintTop_toTopOf="@+id/editTextNumber6" />

        <EditText
            android:id="@+id/editTextNumber6"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/et_number_style"
            android:textColor="@color/black"
            android:ems="10"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            tools:ignore="labelFor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextNumber5"
            app:layout_constraintTop_toBottomOf="@+id/tv_enter_otp" />

        <TextView
            android:id="@+id/tv_resend_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="RESEND OTP AGAIN"
            android:textColor="@color/primaryColour"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/verifyButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/login_button_style"
            android:text="Submit"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/primaryColour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_resend_otp" />

        <ProgressBar
            android:id="@+id/verifyOtpProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verifyButton"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>