<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/themeBackground"
        tools:context=".fragment.CallLogsFragment">

        <TextView
            android:id="@+id/tv_call_logs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60dp"
            android:text="@string/call_logs"
            android:textSize="@dimen/dimen_25sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:elevation="@dimen/dimen_5dp"
            android:background="@color/primaryColour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_call_logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_call_logs"
            app:layout_constraintLeft_toLeftOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>