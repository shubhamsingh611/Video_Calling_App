<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="100sp"
        android:backgroundTint="@color/themeBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/im_call_logs"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:background="@drawable/ic_call_logs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Phone Number"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/call_duration"
        app:layout_constraintEnd_toEndOf="@+id/call_duration"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/call_duration"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_stamp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Time Stamp"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/call_duration"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/call_duration"
        app:layout_constraintTop_toBottomOf="@+id/call_duration" />

    <TextView
        android:id="@+id/call_duration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Call Duration"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/time_stamp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/phone_number" />
</androidx.constraintlayout.widget.ConstraintLayout>